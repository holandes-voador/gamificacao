<%= form_with url: event_new_comment_path(@event) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<ul>
  <% @event.comments.each do |comment| %>
	<h5><%= comment.user.name %></h5>
	<li><%= comment.body %></li>
	<br>
  <% end %>
</ul>

